---
import type { CollectionEntry } from "astro:content"

type Props = {
    tools: CollectionEntry<"tools">
}

const { tools } = Astro.props;
const category = tools.data.categories

---

<a 
    href={`/categories/${category}`}
    class="flex gap-1 items-center text-zinc-700 text-xs leading-0 bg-zinc-100 border border-zinc-300 rounded-sm w-fit py-1 px-2">
    {category}
</a>