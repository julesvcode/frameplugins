---
import type { CollectionEntry } from 'astro:content'


type Props = {
    posts: CollectionEntry<"posts">
}

const { posts } = Astro.props
const { title, description } = posts.data


---

<a href={`/blog/${posts.slug}`} class='group flex flex-col gap-2 rounded-lg p-6 border border-zinc-100 hover:bg-zinc-100'>
    <div class='flex flex-col gap-1'>
        <h2 class="mt-0">{title}</h2>
        <p>{description}</p>
    </div>
    <p class="flex items-center gap-1 group-hover:underline group-hover:text-zinc-950">
        Read more â†’
    </p>
</a>

