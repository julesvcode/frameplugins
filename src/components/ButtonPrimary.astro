---

interface Props {
	title: string;
    link: string;
    target: string;
}

const { title, link, target } = Astro.props;

---

<a 
    href={link}
    title={title}
    target={target}
    class="bg-zinc-800 text-zinc-100 font-medium text-sm leading-0 rounded-md w-fit py-2 px-4 cursor-pointer hover:opacity-80">
    {title}
</a>