---
import type { CollectionEntry } from 'astro:content'


type Props = {
    terms: CollectionEntry<"terms">
}

const { terms } = Astro.props
const { title, description } = terms.data


---

<a href={`/terms/${terms.slug}`} class='group flex flex-col gap-2 rounded-lg p-6 border border-zinc-100 hover:bg-zinc-100'>
    <div class='flex flex-col gap-1'>   
        <div>
            <h2>{title}</h2>
        </div>
        <p>{description}</p>
    </div>
    <p class="group-hover:underline group-hover:text-zinc-950">
        Read more
    </p>
</a>