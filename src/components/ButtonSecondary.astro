---

interface Props {
	title: string;
    link: string;
    target: string;
}

const { title, link, target } = Astro.props;

---

<a 
    href={link}
    title={title}
    target={target}
    class="w-fit inline-flex items-center justify-center bg-zinc-100 border font-medium border-zinc-500 text-sm leading-0 rounded-md py-2 px-3 cursor-pointer hover:opacity-80"
    >
    {title}
</a>