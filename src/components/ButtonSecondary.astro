---

interface Props {
	title: string;
    link: string;
    target: string;
}

const { title, link, target } = Astro.props;

---

<a 
    href={link}
    title={title}
    target={target}
    class="w-fit inline-flex items-center justify-center bg-zinc-50 text-zinc-950 border font-medium border-zinc-50 text-sm leading-0 rounded-md py-2 px-4 cursor-pointer hover:bg-transparent hover:text-zinc-50">{title}
</a>