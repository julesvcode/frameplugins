import frameshareIcon from "../assets/icons/frameshare.png";


---

<a
    href="/frameshare-ad"
    title="Get FrameShare plugin"
    target="_blank"
    class="relative w-full flex flex-col gap-4 group overflow-hidden p-6 rounded-lg bg-gradient-to-b from-zinc-950 to-[#E6F0FD] border border-zinc-200 cursor-pointer hover:border-zinc-300 hover:bg-opacity-90"
>
