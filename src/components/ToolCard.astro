---
import { Icon } from 'astro-icon/components'

import Tag from "./Tag.astro"

const { link, icon, title, description, category } = Astro.props

---

<a 
    href={link}
    class="flex flex-col gap-4 group overflow-hidden p-8 rounded-lg bg-zinc-50 border border-zinc-200 w-full cursor-pointer hover:border-zinc-300">
    <div class="flex items-center justify-center border border-zinc-300 rounded-md w-9 h-9 p-1">
        <Icon name={icon} />
    </div>
    <div class="flex flex-col gap-2 w-full">
        <h3 class="text-zinc-950 text-xl font-bold leading-8">
            {title}
        </h3>
        <p class="text-zinc-700 text-base leading-6 line-clamp-2">
            {description}
        </p>
    </div>
    <Tag 
        category={category}
    />
</a>