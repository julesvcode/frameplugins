---

import { Image } from "astro:assets";
import Tag from "./Tag.astro"
import type { CollectionEntry } from "astro:content"

type Props = {
    tools: CollectionEntry<"tools">
}

const { tools } = Astro.props;
const { icon, title, description, categories } = tools.data



---
<a 
    href={`/tools/${tools.slug}`}
    class="relative flex flex-col gap-4 group overflow-hidden p-8 rounded-lg bg-zinc-50 border border-zinc-200 w-full cursor-pointer hover:border-zinc-300">
    <div aria-hidden="true" class="inset-0 absolute aspect-video border rounded-full -translate-y-1/2 group-hover:-translate-y-1/4 duration-300 bg-gradient-to-b from-zinc-500 to-white blur-2xl opacity-25"></div>
    <div class="flex items-center justify-center border border-zinc-300 rounded-md w-9 h-9 p-1">
       <!-- <Image src={icon}  /> -->
    </div>
    <div class="flex flex-col gap-2 w-full">
        <h3 class="text-zinc-950 text-xl font-bold leading-8">
            {title}
        </h3>
        <p class="text-zinc-700 text-sm leading-6 line-clamp-2">
            {description}
        </p>
    </div>
    <Tag 
        category={categories}
    />
</a>