---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import TwoColumnsLayout from '../../layouts/TwoColumnsLayout.astro';


export const prerender = true

export async function getStaticPaths() {
  
  const posts = await getCollection("posts");
  return posts.map(entry => ({
    params: { slug: entry.slug }, 
    props: { entry },
  }));
}

type Props = {
    entry: CollectionEntry<"posts">
}

const { entry } = Astro.props;
const { Content } = await entry.render();

---

<TwoColumnsLayout title={entry.data.title}>
    <section class="flex flex-col gap-4">
        <div class="flex items-center justify-between">
          <h1 class="text-zinc-950 text-3xl font-bold">{entry.data.title}</h1>		
        </div>
        <div class="flex flex-col gap-4 leading-7">
          <Content />
        </div>
        <div class="py-4 group">
          <span class="text-sm text-zinc-700 group-hover:text-zinc-950 transition-colors">‚Üê </span>
          <a class="text-sm text-zinc-700 hover:text-zinc-950 group-hover:underline transition-colors" href="/terms">Back to all terms</a>
        </div>
      </section>
</TwoColumnsLayout>