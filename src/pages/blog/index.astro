---
import { getCollection } from "astro:content";
import type { CollectionEntry } from 'astro:content';
import TwoColumnsLayout from "../../layouts/TwoColumnsLayout.astro";
import PostCard from "../../components/PostCard.astro";

const allPosts = await getCollection("posts")

---

<TwoColumnsLayout 
    title="Blog"
    description="Discover how to launch ,grow and monetize your newsletter.">
    <section class="w-full flex gap-4 py-8">
        <div class="flex flex-col gap-4">
            <h1>Blog</h1>
            <p class="text-lg">A collection of useful articles for newsletter creators. Learn about the latest tools and techniques in the world of newsletters.</p>
        </div>
    </section>
    <section class="w-full flex gap-4 pt- 4 pb-8">
        <div class="flex flex-col gap-12 pt-4">
            {allPosts.map(post => (
                <PostCard posts={post} />
            ))}
        </div>
    </section> 
</TwoColumnsLayout>