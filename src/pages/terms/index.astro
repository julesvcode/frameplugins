---
import { getCollection } from "astro:content"
import TwoColumnsLayout from "../../layouts/TwoColumnsLayout.astro"
import TermCard from "../../components/TermCard.astro"


const allTerms = await getCollection("terms")

---

<TwoColumnsLayout
    title="Terms"
    description="Step into the world of newsletter with our glossary."
>
    <section class="w-full flex gap-4">
        <div class="flex flex-col gap-4">
            <h1>Newsletter terms</h1>
            <p class="text-lg">Step into the world of newsletter with our glossary - a comprehensive guide to understand newsletters' terminology and tools.</p>
        </div>
    </section>
    <section class="w-full flex gap-4 pb-8">
        <div class="flex flex-col gap-12">
            {allTerms.map(term => (
                <TermCard terms={term} />
            ))}
        </div>
    </section> 
</TwoColumnsLayout>